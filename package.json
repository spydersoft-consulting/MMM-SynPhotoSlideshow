  "scripts": {
    "lint": "prettier --check . && eslint",
    "lint:fix": "prettier --write . && eslint --fix",
    "test": "jest --testTimeout=35000",
    "test:watch": "jest --watch --testTimeout=35000",
    "test:coverage": "jest --coverage --testTimeout=35000",
